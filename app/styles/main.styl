@import 'nib'

body
  font-size: 14px
  line-height: 18px
  color: #111
  background: #fff
  font-family: serif
  padding: 5%
  a
    color: #000
  &.single
    background: #000
    color: #eee
    a
      color: #fff
  &.loading
    background: #fff url('../images/load.gif') top left no-repeat

h1, h2, h3, h4, nav
  font-family: sans-serif

h1, h2, h3, h4
  text-align: center
  font-size: 16px

nav
  margin: 20px 0
  text-align: center

.title, .content
  font-size: 16px
  text-align: left

.gallery
  text-align: center

.thumb
  display: inline-block
  height: 250px
  width: 250px
  line-height: 250px
  text-align: center
  vertical-align: middle

.block.image, .block.link, .block.media
  text-align: center