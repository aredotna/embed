@import 'nib'

body
  font-size: 12px
  line-height: 18px;
  color: #111
  background: #fff
  font-family: sans-serif
  padding: 5%
  &.loading
    background: #fff url('../images/load.gif') top left no-repeat

#content
  text-align: center

.thumb
  display: inline-block
  height: 220px
  line-height: 220px
  vertical-align: middle
  margin-right: 20px
  img
    padding: 3px
    background: #eee
    border-radius: 3px
    border: 1px solid #CACACA
  &:hover
    img
      background: #fff
      border-color: #09c