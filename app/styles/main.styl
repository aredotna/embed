@import 'nib'

body
  font-size: 12px
  line-height: 18px;
  color: #111
  background: #fff
  font-family: sans-serif
  padding: 5%
  a
    color: #000
    
  &.single
    background: #000
    color: #eee
    a
      color: #fff

  &.loading
    background: #fff url('../images/load.gif') top left no-repeat

.content
  text-align: left

.thumb
  display: inline-block
  height: 220px
  line-height: 220px
  vertical-align: middle
  margin-right: 20px